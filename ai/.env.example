# AI Configuration Environment Variables
# Copy this file to .env and fill in your actual values

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-key-here  # Example: fcy4wxi7vr5d4wxy65irtf7ytd4li675ecfdsx3qt45rioujhyc4wy
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=api-version  # Example: 2024-10-21
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name  # Example: gpt-4o, gpt-4, gpt-35-turbo, etc.
AZURE_OPENAI_MODEL_NAME=model-name  # Example: gpt-4.1-2025-04-14  
# Note: Newer models like gpt-4.1 may require more recent API versions (example: 2024-10-21 or later)
# See: https://learn.microsoft.com/en-us/azure/ai-services/openai/reference#api-specs


# Alternative: OpenAI Configuration
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-3.5-turbo


# Alternative: Anthropic Claude Configuration
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
